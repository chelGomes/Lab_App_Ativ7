<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cadastros_de_livros">

    <EditText
        android:id="@+id/editTextEdicao"
        android:layout_width="91dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Edicao"
        app:layout_constraintStart_toStartOf="@+id/textViewEdicao"
        app:layout_constraintTop_toBottomOf="@+id/textViewEdicao" />

    <Button
        android:id="@+id/buttonCadastro_Livro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/teal_700"
        android:text="Cadastro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEdicao" />

    <Button
        android:id="@+id/buttonVoltar_Livro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="56dp"
        android:backgroundTint="@color/teal_700"
        android:onClick="voltarClick"
        android:text="Voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonCadastro_Livro"
        app:layout_constraintTop_toBottomOf="@+id/editTextEdicao" />

    <EditText
        android:id="@+id/editTextAutor"
        android:layout_width="395dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Autor"
        app:layout_constraintStart_toStartOf="@+id/textViewAutor"
        app:layout_constraintTop_toBottomOf="@+id/textViewAutor" />

    <TextView
        android:id="@+id/textViewEditora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Editora"
        app:layout_constraintStart_toStartOf="@+id/editTextAutor"
        app:layout_constraintTop_toBottomOf="@+id/editTextAutor" />

    <TextView
        android:id="@+id/textViewAno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ano"
        app:layout_constraintStart_toStartOf="@+id/editTextEditora"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditora" />

    <TextView
        android:id="@+id/textViewAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Autor"
        app:layout_constraintStart_toStartOf="@+id/editTextTitulo"
        app:layout_constraintTop_toBottomOf="@+id/editTextTitulo" />

    <EditText
        android:id="@+id/editTextTitulo"
        android:layout_width="394dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Titulo"
        app:layout_constraintStart_toStartOf="@+id/textViewTitulo"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitulo" />

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextAno"
        android:layout_width="84dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Ano"
        app:layout_constraintStart_toStartOf="@+id/textViewAno"
        app:layout_constraintTop_toBottomOf="@+id/textViewAno" />

    <EditText
        android:id="@+id/editTextEditora"
        android:layout_width="388dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Editora"
        app:layout_constraintStart_toStartOf="@+id/textViewEditora"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditora" />

    <TextView
        android:id="@+id/textViewEdicao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Edicao"
        app:layout_constraintStart_toStartOf="@+id/editTextAno"
        app:layout_constraintTop_toBottomOf="@+id/editTextAno" />

</androidx.constraintlayout.widget.ConstraintLayout>